
mixin rich-checkbox(params)
    +b.rich-checkbox(style="width: " + params.width)
        +e.LABEL.label
            +e.INPUT.input(type="checkbox" name=params.name value=params.value checked=params.state)
            +e.SPAN.span
            +e.text
                +e.label-text #{params.label_text}
                +e.content-text #{params.content_text}