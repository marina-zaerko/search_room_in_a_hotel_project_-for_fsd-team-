include ../../../components/dropdown/date-dropdown/date-dropdown.pug
include ../../../components/dropdown/dropdown.pug
include ../../../components/button/_long/_with-arrow/button_with-arrow.pug

mixin summary(params)
    +b.summary
        +e.content
            +e.head
                +e.head-elem
                    +e.num №
                    +e.num-set #{params.num}
                    +e.class #{params.class}
                +e.head-elem
                    +e.sum-set #{params.sum}₽
                    +e.interval в сутки
            +e.dropdown
                +date-dropdown({id:"date-dropdown-default", placeholder:"19.08.2019", label_text:"прибытие"})
                +date-dropdown({id:"date-dropdown-default", placeholder:"23.08.2019", label_text:"выезд"})
            +e.long-dropdown
                +dropdown({placeholder:"3 гостя", label_text:"гости", hover_text:"",len:""})
            +e.description
                +e.description-element
                    +e.name #{params.sum}₽ х #{params.time} суток
                    +e.sum #{params.payment}₽
                +e.middle-description-element
                    +e.description-element
                        +e.description-title
                            +e.name Сбор за услуги: скидка #{params.discaunt}₽
                            +e.icon
                        +e.sum #{params.collect}₽
                +e.description-element
                    +e.description-title
                        +e.name Сбор за дополнительные услуги
                        +e.icon
                    +e.sum #{params.collect_dop}₽
            +e.out
                +e.out-title Итого
                +e.out-line
                +e.out-sum #{params.out}₽
            +e.button
                +button_with-arrow('забронировать')
            
